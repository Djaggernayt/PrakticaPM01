<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pay">

    <Button
        android:id="@+id/bmain2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:backgroundTint="#FFFFFF"
        android:text="Чек покупки"
        android:textColor="#1A6FEE"
        android:visibility="gone"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bmain"
        app:layout_constraintEnd_toEndOf="@+id/bmain"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bmain" />

    <TextView
        android:id="@+id/textTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif"
        android:text="Ваш заказ успешно оплачен!"
        android:textColor="#00B712"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/bottle"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/bottle"
        app:layout_constraintTop_toBottomOf="@+id/bottle" />

    <TextView
        android:id="@+id/tdt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Оплата"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tdt2">

    </ProgressBar>

    <TextView
        android:id="@+id/tvbank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Связываемся с банком..."
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/progressBar"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <ImageView
        android:id="@+id/bottle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/tdt2"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/tdt2"
        app:layout_constraintTop_toBottomOf="@+id/tdt2"
        app:srcCompat="@drawable/bottle" />

    <TextView
        android:id="@+id/tbtit2"
        android:layout_width="343dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Вам осталось дождаться приезда медсестры и сдать анализы. До скорой встречи!"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/textTitle2"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/textTitle2"
        app:layout_constraintTop_toBottomOf="@+id/textTitle2" />

    <TextView
        android:id="@+id/tbtit3"
        android:layout_width="343dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="Не забудьте ознакомиться с         правилами подготовки к сдаче анализов"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/tbtit2"
        app:layout_constraintStart_toStartOf="@+id/tbtit2"
        app:layout_constraintTop_toBottomOf="@+id/tbtit2" />

    <Button
        android:id="@+id/bmain"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="На главную"
        android:visibility="gone"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>